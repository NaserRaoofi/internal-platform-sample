[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .tox,
    build,
    dist,
    .eggs,
    *.egg-info

# Per-file ignores
per-file-ignores =
    __init__.py:F401length = 88
