{
    // üêç Python Configuration - Automatic Virtual Environment Setup
    // ============================================================
    
    // Python Interpreter - Points to project's virtual environment
    "python.defaultInterpreterPath": "./backend/.venv/bin/python",
    "python.pythonPath": "./backend/.venv/bin/python",
    
    // Terminal Configuration - Auto-activate virtual environment
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    
    // Linting & Code Quality - FIXED FOR 88 CHARACTERS
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "./backend/.venv/bin/flake8",
    "python.linting.flake8Args": [
        "--max-line-length=88", 
        "--extend-ignore=E203,W503,E501"
    ],
    "python.linting.pylintEnabled": false,
    "python.linting.mypyEnabled": false,
    
    // Formatting with Black - 88 CHARACTERS
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "./backend/.venv/bin/black",
    "python.formatting.blackArgs": ["--line-length=88"],
    
    // Testing Configuration
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "./backend/.venv/bin/pytest",
    "python.testing.pytestArgs": ["./backend/tests"],
    "python.testing.unittestEnabled": false,
    
    // IntelliSense & Language Server
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.extraPaths": ["./backend"],
    "pylance.linting.enabled": false,
    
    // File Associations & Extensions
    "files.associations": {
        "*.py": "python",
        "pyproject.toml": "toml",
        "*.tf": "terraform",
        "*.tfvars": "terraform"
    },
    
    // Terminal Integration
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.cwd": "./backend",
    
    // FastAPI & Development
    "python.envFile": "./backend/.env",
    
    // Editor Settings - 88 CHARACTER LIMIT
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    
    // Python-specific editor settings
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.tabSize": 4,
        "editor.rulers": [88],
        "editor.wordWrap": "off"
    },
    
    // Terraform Configuration
    "[terraform]": {
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    
    // JSON Configuration
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    
    // Markdown Configuration
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    
    // File Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    
    // Git Configuration
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    
    // Disable telemetry for privacy
    "telemetry.telemetryLevel": "off",
    
    // Performance optimizations
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "**/venv": true,
        "**/__pycache__": true,
        "**/.git": true
    },
    
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/node_modules/**": true,
        "**/venv/**": true,
        "**/__pycache__/**": true
    }
}
